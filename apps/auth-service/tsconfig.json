{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "../../", 
    "outDir": "./dist",
    "baseUrl": "../../", 
    "paths": {
      "@interviewspace/db": ["packages/db/src/index"] 
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",                
    "../../packages/db/src/**/*",
    "src/types/express.d.ts"
  ],
  "exclude": ["node_modules"]
}
